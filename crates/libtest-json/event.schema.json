{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "discover_start"
        }
      },
      "$ref": "#/$defs/DiscoverStart",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "discover_case"
        }
      },
      "$ref": "#/$defs/DiscoverCase",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "discover_complete"
        }
      },
      "$ref": "#/$defs/DiscoverComplete",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "run_start"
        }
      },
      "$ref": "#/$defs/RunStart",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "case_start"
        }
      },
      "$ref": "#/$defs/CaseStart",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "case_message"
        }
      },
      "$ref": "#/$defs/CaseMessage",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "case_complete"
        }
      },
      "$ref": "#/$defs/CaseComplete",
      "required": [
        "event"
      ]
    },
    {
      "type": "object",
      "properties": {
        "event": {
          "type": "string",
          "const": "run_complete"
        }
      },
      "$ref": "#/$defs/RunComplete",
      "required": [
        "event"
      ]
    }
  ],
  "$defs": {
    "Elapsed": {
      "description": "Time elapsed since process start",
      "type": "string"
    },
    "DiscoverStart": {
      "type": "object",
      "properties": {
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "RunMode": {
      "type": "string",
      "enum": [
        "test",
        "bench"
      ]
    },
    "DiscoverCase": {
      "description": "A test case was found\n\nThe order these are returned in is unspecified and is unrelated to the order they are run in.",
      "type": "object",
      "properties": {
        "name": {
          "description": "An identifier that is unique across the entire run",
          "type": "string"
        },
        "mode": {
          "$ref": "#/$defs/RunMode"
        },
        "selected": {
          "description": "Whether selected to be run by the user",
          "type": "boolean"
        },
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "DiscoverComplete": {
      "type": "object",
      "properties": {
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "RunStart": {
      "type": "object",
      "properties": {
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "CaseStart": {
      "type": "object",
      "properties": {
        "name": {
          "description": "An identifier that is unique across the entire run",
          "type": "string"
        },
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "MessageKind": {
      "type": "string",
      "enum": [
        "error",
        "ignored"
      ]
    },
    "CaseMessage": {
      "type": "object",
      "properties": {
        "name": {
          "description": "An identifier that is unique across the entire run",
          "type": "string"
        },
        "kind": {
          "$ref": "#/$defs/MessageKind"
        },
        "message": {
          "type": [
            "string",
            "null"
          ]
        },
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name",
        "kind"
      ]
    },
    "CaseComplete": {
      "type": "object",
      "properties": {
        "name": {
          "description": "An identifier that is unique across the entire run",
          "type": "string"
        },
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "RunComplete": {
      "type": "object",
      "properties": {
        "elapsed_s": {
          "anyOf": [
            {
              "$ref": "#/$defs/Elapsed"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  }
}